<div class="hero-unit">
  <h2 class="name"><%= product.name %></h2>
  <%- linkTo('Edit this product', editProductPath(params.id), {class: 'btn pull-right'}); %>
  <%- linkTo('Back to list', productPath(''), {class: 'btn pull-right'}); %>
</div>

<h2>Product Properties</h2>
<% for(var i in product) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span12">
    <%= i %>
<span class="<%= i %>"><%= product[i] %></span>
  </div>
  
</div>
<% } -%><% } -%>